.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %h1.text-center Top Articles

    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %br
        = form_tag representative_rate_article_path, method: :post, id: 'rate_article' do
            = render 'articles', top_articles: @top_articles, rating_list: @rating_list,
            form_url: representative_rate_article_path(@representative),
            form_method: :post,
            rating_list: @rating_list
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        .clearfix.mt-3
            .float-right
                = link_to representative_news_items_path(@representative), class: 'btn btn-info' do
                    View news articles
                    %i.fas.fa-arrow-right
